<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lh360Silver"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp" />

    <ProgressBar
        android:id="@+id/pb_splash_screen"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:indeterminateOnly="true" />

    <TextView
        android:id="@+id/tv_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/splash_screen"
        android:textColor="@color/lh360Asbestos"
        android:textSize="36dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/splash_screen_2"
        android:textColor="@color/lh360Clouds"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>