<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lh360Grey"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <ImageView
        android:id="@+id/detail_blog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/detail_blog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blog_title"
        android:textColor="@color/lh360Clouds"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_blog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/lh360Black"
        android:textSize="16sp" />

</LinearLayout>