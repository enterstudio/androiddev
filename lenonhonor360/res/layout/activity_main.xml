<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lh360Silver"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/new_blog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/lh360Black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_new_blog"
        style="@style/BlueButton"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="315dp"
        android:minWidth="10dp"
        android:text="@string/read_more" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="375dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/older_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="385dp"
        android:text="@string/older_blogs"
        android:textColor="@color/lh360Asbestos"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/older_posts"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/view1"
        android:layout_below="@+id/older_posts" >

        <include
            android:id="@+id/row1"
            layout="@layout/table_row" />

        <include
            android:id="@+id/row2"
            layout="@layout/table_row" />

        <include
            android:id="@+id/row3"
            layout="@layout/table_row" />
    </TableLayout>

</RelativeLayout>